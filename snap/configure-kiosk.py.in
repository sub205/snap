#!/usr/bin/python3

import leveldb
import sys, os

if len(sys.argv) != 3:
  print('Usage: ', sys.argv[0], '<key> <value>')
  exit(1)

path = os.environ['SNAP_DATA'] + '/chromium/Default/Local App Settings/%%EXTENSION%%'

if not os.path.exists(path):
  os.makedirs(path)


db = leveldb.LevelDB(path)

db.Put(sys.argv[1].encode(), sys.argv[2].encode())

